        "@zitadel/client2#build",
        "@zitadel/react#build"
      ]
    },
    "test:watch": {
      "dependsOn": [
        "@zitadel/node#build",
        "@zitadel/client2#build",
        "@zitadel/react#build"
      ]
    }
