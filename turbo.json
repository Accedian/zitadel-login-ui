{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "dependsOn": ["generate", "^build"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "generate": {
      "cache": true
    }
  },
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "ZITADEL_API_URL",
    "ZITADEL_PROJECT_ID",
    "ZITADEL_APP_ID",
    "ZITADEL_SERVICE_USER_TOKEN"
  ]
}
