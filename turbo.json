{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "DEBUG",
    "VERCEL_URL",
    "EMAIL_VERIFICATION",
    "QA_AUDIENCE",
    "QA_SYSTEM_USER_ID",
    "QA_SYSTEM_USER_PRIVATE_KEY",
    "PROD_AUDIENCE",
    "PROD_SYSTEM_USER_ID",
    "PROD_SYSTEM_USER_PRIVATE_KEY",
    "ZITADEL_API_URL",
    "ZITADEL_SERVICE_USER_ID",
    "ZITADEL_SERVICE_USER_TOKEN",
    "NEXT_PUBLIC_BASE_PATH"
  ],
  "tasks": {
    "generate": {
      "cache": true
    },
    "build": {},
    "test": {},
    "start": {},
    "start:built": {},
    "test:unit": {},
    "test:integration": {},
    "test:watch": {
      "persistent": true
    },
    "lint": {},
    "lint:fix": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
