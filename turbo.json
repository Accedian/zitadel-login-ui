{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "generate": {
      "cache": true
    },
    "build": {
      "dependsOn": [
        "generate"
      ]
    },
    "test": {},
    "test:unit": {},
    "test:integration": {},
    "test:watch": {
      "persistent": true
    },
    "lint": {},
    "lint:fix": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  },
  "globalDependencies": [
    "**/.env.*local"
  ],
  "globalEnv": [
    "ZITADEL_API_URL",
    "ZITADEL_SERVICE_USER_TOKEN",
    "ZITADEL_SYSTEM_API_URL",
    "ZITADEL_SYSTEM_API_USERID",
    "ZITADEL_SYSTEM_API_KEY",
    "ZITADEL_ISSUER",
    "ZITADEL_ADMIN_TOKEN"
  ]
}